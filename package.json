{
  "name": "lovelace-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest run",
    "test:watch": "vitest",
    "cy:open": "cypress open",
    "cy:run:component": "cypress run --component",
    "cy:run:component:snap-update": "cypress run --component --env updateSnapshots=true && rimraf -g './cypress/snapshots/**/__diff_output__'",
    "cy:run:component:vrt": "cypress run --env requireSnapshots=true --component --spec \"src/**/*VRT*.cy.{ts,tsx}\""
  },
  "dependencies": {
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tone": "^15.1.22",
    "vexflow4": "^4.2.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@simonsmith/cypress-image-snapshot": "^10.0.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.4",
    "cypress": "^15.4.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "jsdom": "^27.0.0",
    "rimraf": "^6.1.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
